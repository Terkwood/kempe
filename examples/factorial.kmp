loop : Int Int -- Int Int
     =: [ dup 0 =
          if(, dup dip(*) 1 - loop)
        ]

; tail recursive factorial
;
; see C example: https://wiki.c2.com/?TailRecursion
fac_tailrec : Int -- Int
        =: [ 1 loop dip(drop) ]

; na√Øve factorial
fac : Int -- Int
    =: [ dup 0 =
         if( drop 1
           , dup 1 - fac * )
       ]

%foreign cabi fac
%foreign cabi fac_tailrec
