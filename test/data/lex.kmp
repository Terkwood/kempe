; this is a comment

type Void {}

type Maybe a { Just a | Nothing }

type OS { Macos | Linux | Windows | Freebsd }

; just has type a -- Maybe a
; nothing has type -- Maybe a

isUnix : OS -- Bool,
isUnix =: [
    { case
        | Windows -> False
        | _ -> True
    }
]

osNum : OS -- Int,
osNum =: [
    { case
        | Macos -> 1
        | Linux -> 2
        | Windows -> 3
        | Freebsd -> 4
    }
]

rand : -- Int,
rand =: [ $cfun"rand" ]

; all types are sized (monomorphized)
drop2 : a b --,
drop2 =: [ drop drop ]

drop3 : a b c --,
drop3 =: [ drop drop drop ]

trip : a -- a a a,
trip =: [ dup dup ]
